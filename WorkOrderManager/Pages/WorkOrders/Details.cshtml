}

<h1>Details</h1>

<div>
    <h4>WorkOrder</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkOrder.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkOrder.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkOrder.Subtotal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkOrder.Subtotal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkOrder.Tax)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkOrder.Tax)
        </dd>
        <dt class="col-sm-2">
            Work Order Notes
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkOrder.WorkOrderNotes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkOrder.AmountPaid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkOrder.AmountPaid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkOrder.PaidInFull)
